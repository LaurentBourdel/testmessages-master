<!DOCTYPE html>
<html>
  <head>
  </head>
<body>
  <div class="jumbotron bg_img">
    <div class="container">
      <h1 class="display-4">Welcome to EventBrite</h1>
      <p>The leader for events creation</p>
      <% if current_user %>    
        <p><a class="btn btn-primary btn-lg" role="button"<%= link_to "Create an event", new_event_path %></a></p>
      <% else %>
        <p><a class="btn btn-primary btn-lg" role="button"<%= link_to "Create an event", new_user_session_path %></a></p>
      <% end %>
    </div>
  </div>

<div class="container">
  <div class="card border-0 shadow my-5">
    <div class="card-body p-5">
    	<div class="row justify-content-center"></div>

			<div class="d-flex justify-content-around align-items-center flex-wrap">
				<% @events.each_with_index do |e,id| %>
					<div class="card mt-3 mb-3" style="width: 18rem;">
						<div class="card-header">
							<h5 class="card-title"><%=e.title%></h5>
						</div>
						<div class="card-body">
							<p class="card-text"><%=e.description %>...</p>
						</div>
						<div class="card-footer">
							<%= link_to 'Read more..', event_path(:id => e.id), { :class=>"card-link" } %>
						</div>
					</div>
				<% end %>
			</div>
  
  	</div>
	</div>
</div>

</body>